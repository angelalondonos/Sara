<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/colorResumenMonitor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    android:id="@+id/resumen_monitor"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/persona" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imagen"
            android:text=""
            android:textSize="@dimen/lista_texto_titulo" />

        <TextView
            android:id="@+id/linea_monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre"
            android:layout_toEndOf="@+id/imagen"
            android:text=""
            android:textSize="@dimen/lista_texto_linea_monitoria" />

    </RelativeLayout>

</android.support.v7.widget.CardView>