<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmento_lista_monitores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Spinner
        android:id="@+id/spinner_lista_monitores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/lineas_monitoria"
        >
    </Spinner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaMonitores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_flotante_agregar_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_agregar"
        app:backgroundTint="#0040FF"
        />

</FrameLayout>